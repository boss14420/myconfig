mode "mpd" {
    bindsym $mod+t       exec mpc toggle; mode "default"
    bindsym $mod+n       exec mpc next; mode "default"
    bindsym $mod+p       exec mpc prev; mode "default"
    bindsym $mod+s       exec mpc stop; mode "default"
    bindsym $mod+b       exec mpc seek -7
    bindsym $mod+f       exec mpc seek +7

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


